<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="Hellboy (2004)" />

    <TextView
        android:id="@+id/director_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        tools:text="Guillermo Del Toro" />

    <ImageView
        android:id="@+id/genre_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icons8_action_96" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/your_rating"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Your Rating: 3/5" />

        <ImageView
            android:id="@+id/star_imageView"
            android:layout_width="35dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/icons8_star_90" />

    </LinearLayout>

    <TextView
        android:id="@+id/tapToEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tapToEdit"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/yourNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textLongMessage|textMultiLine"
        android:textAlignment="center"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/reviews_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icons8_documentary_100" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tapMe"
        android:textAlignment="center" />

</LinearLayout>
